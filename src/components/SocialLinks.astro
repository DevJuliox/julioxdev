---
import { Icon } from "astro-icon/components";
import { Mail } from "lucide-astro";
import { Image } from "astro:assets";
const socialLinks = [
  {
    name: "TikTok",
    icon: "tiktoknegro",
    url: "https://www.tiktok.com/@juliox.dev",
  },
  {
    name: "YouTube",
    icon: "mdi:youtube",
    url: "https://www.youtube.com/@DevJulio",
  },
  { name: "Github", icon: "mdi:github", url: "https://github.com/DevJuliox" },
  {
    name: "Twitch",
    icon: "mdi:twitch",
    url: "https://www.twitch.tv/julioxdev",
  },
];

const categories = [
  { name: "Web Dev", href: "#" },
  { name: "AI", href: "#" },
  { name: "Projects", href: "#" },
];
---

<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto p-4">
    {/* Header */}
    <header class="flex justify-between items-center mb-8">
      <!-- <button class="p-2 hover:bg-gray-100 rounded-full">
        <ArrowLeft class="w-6 h-6" />
      </button>
      <button class="p-2 hover:bg-gray-100 rounded-full">
        <MoreHorizontal class="w-6 h-6" />
      </button> -->
    </header>

    {/* Profile Section */}
    <div class="text-center mb-8">
      <div class="mb-4">
        <div class="relative w-32 h-32 mx-auto mb-4">
          <Image
            src="/images/juliox.png?height=128&width=128"
            alt="Profile"
            width={128}
            height={128}
            class="rounded-full object-cover aspect-square"
          />
        </div>
        <h1 class="text-2xl font-bold mb-1">Julio.Dev</h1>
        <p class="text-gray-600 mb-2">Programador web, entusiasta de la AI</p>
        <a
          href="mailto:julioxdev@gmail.com"
          class="inline-flex items-center text-gray-600 hover:text-gray-900"
        >
          <Mail name="mdi:email" class="w-4 h-4 mr-1" />
          julioxdev@gmail.com
        </a>
      </div>

      {/* Categories */}
      <div class="flex justify-center gap-3 mb-8">
        {
          categories.map((category) => (
            <a
              href={category.href}
              class="px-6 py-2 bg-blue-50 text-blue-600 rounded-full hover:bg-blue-100 transition-colors"
            >
              {category.name}
            </a>
          ))
        }
      </div>

      {/* Stats */}
      <div class="grid grid-cols-1 gap-4 mb-8">
        <!-- <div>
          <div class="text-xl font-bold">2.1k</div>
          <div class="text-gray-600">Posts</div>
        </div> -->
        <div>
          <div class="text-xl font-bold">20k</div>
          <div class="text-gray-600">Followers</div>
        </div>
        <!-- <div>
          <div class="text-xl font-bold">8.2k</div>
          <div class="text-gray-600">Following</div>
        </div> -->
      </div>

      {/* Social Links */}
      <div class="flex justify-center gap-6 items-center">
        {
          socialLinks.map((link) => (
            <a
              href={link.url}
              class=" hover:bg-gray-100 transition-colors text-center flex items-center gap-1 flex-col justify-center"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon name={link.icon} />
              <div class=" text-gray-700">{link.name}</div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style>
  [astro-icon] {
    color: white;
    width: 1.25rem;
    height: 1.25rem;
  }
</style>
